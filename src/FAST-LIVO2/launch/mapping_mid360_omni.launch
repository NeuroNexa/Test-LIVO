<launch>
    <!-- Launch file for the four-camera OmniRadtan setup -->

    <arg name="rviz" default="true" />

    <rosparam command="load" file="$(find fast_livo)/config/mid360_omni.yaml" />

    <node pkg="fast_livo" type="fastlivo_mapping" name="laserMapping" output="screen">
        <rosparam file="$(find fast_livo)/config/omni_radtan_cam.yaml" />
    </node>

    <group if="$(arg rviz)">
        <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz"
              args="-d $(find fast_livo)/rviz_cfg/mid360.rviz" />
    </group>

</launch>
